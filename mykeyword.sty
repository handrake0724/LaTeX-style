\renewcommand{\div}[2][0]{
  \ifthenelse {\equal{#1}{0}}
  {
    \nabla \cdot #2
  }
  {
    \nabla \cdot \left( #2 \right)
  }
}
\newcommand{\grad}[2][0]{
  \ifthenelse {\equal{#1}{0}}
  {
    \nabla #2
  }
  {
    \nabla \left( #2 \right)
  }
}
\newcommand{\curl}[2][0]{
  \ifthenelse {\equal{#1}{0}}
  {
    \nabla \times #2
  }
  {
    \nabla \times \left( #2 \right)
  }
}
\newcommand{\laplacian}[2][0]{
  \ifthenelse {\equal{#1}{0}}
  {
    \nabla^{2} #2
  }
  {
    \nabla^{2}\left( #2 \right)
  }
}
\newcommand{\dotprod}[2]{#1 \cdot #2}
\newcommand{\crossprod}[2]{#1 \times #2}
\newcommand{\abs}[1]{\left\lvert #1 \right\rvert}
\newcommand{\norm}[1]{\lvert\lvert #1 \rvert\rvert}

\newcommand{\paren}[2][1]{%
  \ifthenelse {\equal{#1}{1}}
  {
    \left( #2 \right)
  }
  {
    \ifthenelse {\equal{#1}{2}}
    {
      \left\{ #2 \right\}
    }
    {
      \ifthenelse {\equal{#1}{3}}
      {
        \left[ #2 \right]
      }
      {}
    }
  }
}

